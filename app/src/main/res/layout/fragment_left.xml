<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_slidingmenu_left"
    android:id="@+id/ll_left_fragment">

        <RelativeLayout
            android:id="@+id/rl_left_news"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_left_news"
                android:layout_centerVertical="true"
                android:src="@mipmap/biz_navigation_tab_news"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_lift_new"
                android:layout_toRightOf="@id/iv_left_news"
                android:layout_alignTop="@id/iv_left_news"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="新闻"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignBottom="@id/iv_left_news"
                android:layout_toRightOf="@id/iv_left_news"
                android:textColor="#ffffff"
                android:text="NEWS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_left_favorites"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_left_favorites"
                android:layout_centerVertical="true"
                android:src="@mipmap/biz_navigation_tab_read"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_lift_favorite"
                android:layout_toRightOf="@id/iv_left_favorites"
                android:layout_alignTop="@id/iv_left_favorites"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="收藏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignBottom="@id/iv_left_favorites"
                android:layout_toRightOf="@id/iv_left_favorites"
                android:textColor="#ffffff"
                android:text="FAVORITE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_left_locals"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_left_locals"
                android:layout_centerVertical="true"
                android:src="@mipmap/biz_navigation_tab_local_news"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_lift_local"
                android:layout_toRightOf="@id/iv_left_locals"
                android:layout_alignTop="@id/iv_left_locals"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="本地"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignBottom="@id/iv_left_locals"
                android:layout_toRightOf="@id/iv_left_locals"
                android:textColor="#ffffff"
                android:text="LOCAL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_left_comments"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_left_comments"
                android:layout_centerVertical="true"
                android:src="@mipmap/biz_navigation_tab_ties"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_lift_comment"
                android:layout_toRightOf="@id/iv_left_comments"
                android:layout_alignTop="@id/iv_left_comments"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="跟帖"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignBottom="@id/iv_left_comments"
                android:layout_toRightOf="@id/iv_left_comments"
                android:textColor="#ffffff"
                android:text="COMMENT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_left_photos"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_left_photos"
                android:layout_centerVertical="true"
                android:src="@mipmap/biz_navigation_tab_pics"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_lift_photo"
                android:layout_toRightOf="@id/iv_left_photos"
                android:layout_alignTop="@id/iv_left_photos"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="图片"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignBottom="@id/iv_left_photos"
                android:layout_toRightOf="@id/iv_left_photos"
                android:textColor="#ffffff"
                android:text="PHOTO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

</LinearLayout>