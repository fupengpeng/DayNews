<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_right_login_forget_password_email"
        android:background="#FFF7F8F9"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:background="@drawable/selector_text_border"
            android:id="@+id/tiet_right_login_forget_password_email"
            android:paddingLeft="5dp"
            android:hint="请输入注册时的邮箱地址"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_right_login_password_affirm"
        android:layout_margin="1dp"
        android:background="@color/red"
        android:textColor="#ffffff"
        android:text="确认"
        android:layout_width="100dp"
        android:layout_height="55dp" />
</LinearLayout>