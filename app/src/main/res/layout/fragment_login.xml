<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD6DFE6">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_right_login_nikename"
        android:background="#FFF7F8F9"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:paddingLeft="5dp"
            android:background="@drawable/selector_text_border"
            android:id="@+id/tiet_right_login_nikename"
            android:hint="请输入用户昵称"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </android.support.design.widget.TextInputLayout>
    <!--android:inputType="textPassword"  隐藏密码-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_right_login_password"
        android:background="#FFF7F8F9"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:paddingLeft="5dp"
            android:background="@drawable/selector_text_border"
            android:inputType="textPassword"
            android:id="@+id/tiet_right_login_password"
            android:hint="密码：6到16位字符"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <Button
            android:id="@+id/btn_right_login_enroll"
            android:layout_margin="1dp"
            android:background="@color/red"
            android:textColor="#ffffff"
            android:text="注册"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="55dp" />
        <Button
            android:id="@+id/btn_right_login_password"
            android:layout_margin="1dp"
            android:background="@color/red"
            android:textColor="#ffffff"
            android:text="忘记密码"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="55dp" />
        <Button
            android:id="@+id/btn_right_login_login"
            android:layout_margin="1dp"
            android:background="@color/red"
            android:textColor="#ffffff"
            android:text="登录"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="55dp" />
    </LinearLayout>
</LinearLayout>