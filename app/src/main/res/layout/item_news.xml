<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="@drawable/selector_news_ha"
    android:id="@+id/ll_item_home_news">

<ImageView
    android:id="@+id/iv_item_news_pic"
    android:src="@mipmap/loading_01"
    android:layout_marginLeft="10dp"
    android:layout_width="70dp"
    android:layout_height="60dp" />
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <TextView
        android:id="@+id/tv_item_news_title"
        android:maxLines="1"
        android:textSize="16sp"
        android:text="标题"
        android:layout_width="251dp"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/tv_item_news_details"
        android:maxLines="1"
        android:textSize="10sp"
        android:layout_marginLeft="1dp"
        android:text="详情"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/tv_item_news_time"
        android:layout_gravity="bottom|right"
        android:textSize="8sp"
        android:text="时间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>